<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.zzz.easyshare">

    <!--获取网络权限-->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!--写SD卡权限-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS"/>
    <uses-permission android:name="android.permission.MEDIA_CONTENT_CONTROL"/>
    <!--读SD卡权限-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.activity.MainActivity">
        </activity>
        <activity android:name=".ui.activity.ShareActivity">
        </activity>
        <activity android:name=".ui.activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.RegistActivity">
        </activity>
        <activity android:name=".ui.activity.WebDetailActivity">
        </activity>
        <activity android:name=".ui.activity.MyshareActivity"/>
        <activity android:name=".ui.activity.MessagesettingActivity">
        </activity>
        <activity android:name=".ui.activity.MyorderActivity">
        </activity>
        <activity android:name=".ui.activity.PersonalInfoActivity">
        </activity>
        <activity android:name=".ui.activity.FeedbackActivity">
        </activity>
        <activity android:name=".ui.activity.GoodsActivity">
        </activity>
        <activity android:name=".ui.activity.OrdersActivity">
        </activity>
        <activity android:name=".ui.activity.PayActivity">
        </activity>
    </application>

</manifest>