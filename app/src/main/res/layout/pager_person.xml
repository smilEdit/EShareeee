<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:src="@mipmap/ic_launcher"
        android:id="@+id/iv_person_avatar"
        android:layout_width="150dp"
        android:layout_height="150dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <TextView
                android:text="nickname"
                android:id="@+id/tv_person_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="20dp"
                android:text="signature..........................................."
                android:maxLines="2"
                android:id="@+id/tv_person_signature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/iv_person_share"
            android:src="@mipmap/ic_launcher"
            style="@style/iv_person"/>
        <ImageView
            android:id="@+id/iv_person_tags"
            android:src="@mipmap/ic_launcher"
            style="@style/iv_person"/>
        <ImageView
            android:id="@+id/iv_person_order"
            android:src="@mipmap/ic_launcher"
            style="@style/iv_person"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/iv_person_info"
            android:src="@mipmap/ic_launcher"
            style="@style/iv_person"/>
        <ImageView
            android:id="@+id/iv_person_message_setting"
            android:src="@mipmap/ic_launcher"
            style="@style/iv_person"/>
        <ImageView
            android:id="@+id/iv_person_password_setting"
            android:src="@mipmap/ic_launcher"
            style="@style/iv_person"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/iv_person_eshare"
            android:src="@mipmap/ic_launcher"
            style="@style/iv_person"/>
        <ImageView
            android:id="@+id/iv_person_feedback"
            android:src="@mipmap/ic_launcher"
            style="@style/iv_person"/>
        <ImageView
            android:id="@+id/iv_person_help"
            android:src="@mipmap/ic_launcher"
            style="@style/iv_person"/>
    </LinearLayout>
</LinearLayout>